<div class="mx-auto d-flex flex-column mt-5" style="max-width: 80%">
  <div class="border p-3 mb-2">
    <div class="d-flex justify-content-between align-items-center">
      <h3>Post: <%= @post.title %> Created by <span><%= @post.author.name %></span></h3>
      <p>
        comments:<% if @post.comments_counter.to_i > 0 %> <%= @post.comments_counter %> <% else %> 0
        <% end %> , likes :<% if @post.likes_counter.to_i > 0 %> <%= @post.likes_counter %> <% else
        %> 0 <% end %>
      </p>
    </div>
    <p><%= @post.text %></p>
  </div>
  <div class="border p-3 mb-2">
    <h3>Comments</h3>
    <% @post.five_recent_comments.each do |comment|%> <div class="d-flex"><p><%= comment.author.name %>: &nbsp; </p>
      <p><%= comment.text %></p></div> <% end %>
      <%= form_with model: @comment, url: "/addcomment/#{@post.id}", method: :post, local: true, data: {turbo: false} do |f| %>
  <%= f.text_field :comment, placeholder: "add a comment" %> <br><br>
  <%= f.submit "Add" %>
<% end %>
  </div>
</div>
