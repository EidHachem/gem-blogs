<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container d-flex flex-column justify-content-center align-items-cente mt-5 w-50 mb-5">
  <form class="mb-5">
    <div class="form-group">
      <%= f.email_field :email, autocomplete: "email", :class => 'form-control', autofocus: true,
      placeholder: "Email", style: 'width: 60%' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "current-password", :class => 'form-control',
      placeholder: "Password", style: 'width: 60%' %>
    </div>
    <%= f.submit "Log in", :class => 'btn btn-primary', style: 'width: 60%' %>
  </form>
</div>
